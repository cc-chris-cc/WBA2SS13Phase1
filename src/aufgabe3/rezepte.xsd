<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="rezepte.xsd" xmlns:tns="rezepte.xsd" elementFormDefault="qualified">
	
	<xs:element name="rezept" type="rezept" />
	
	<xs:complexType name="rezept">
		<xs:sequence>
			<xs:element name="titel" type="xs:string" />
			<xs:element name="fotos" type="xs:anyURI" />
			<xs:element name="zutaten" type="zutaten" />
			<xs:element name="portionen" type="xs:integer"/>
			<xs:element name="zubereitung" type="zubereitung"/>
			<xs:element name="kommentare" type="kommentare"/>
		</xs:sequence>
		</xs:complexType>
		
		
		<xs:complexType name="zutaten">
			<xs:sequence>
				<xs:attribute name="name" type="xs:string" use="required"/>
				<xs:attribute name="menge" type="xs:float" use="required"/>
				<xs:attribute name="einheit" type="xs:string" use="required"/>
			</xs:sequence>
		</xs:complexType>
		
		
</xs:schema>